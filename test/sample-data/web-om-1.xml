		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/template/login.jsf</form-login-page>
			<form-error-page>/template/login-error.jsf</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>omadmin</role-name>
	</security-role>


</web-app>
